{
  "rules": {
    "flamelink": {
      ".read": "true",
      ".write": "auth != null",
      "environments": {
        "production": {
          "content": {
            "courses": {
              "en-US": {
                ".indexOn": "slug"
              }
            },
            "course": {
              "en-US": {
                ".indexOn": "slug"
              }
            },
            "conferences": {
              "en-US": {
                ".indexOn": "slug"
              }
            },
            "conference": {
              "en-US": {
                ".indexOn": "slug"
              }
            },
            "lessons": {
              "en-US": {
                ".indexOn": ["status", "slug"]
              }
            },
            "team": {
              "en-US": {
                "members": {
                  ".indexOn": "email"
                }
              }
            }
          }
        },
        "staging": {
          "content": {
            "courses": {
              "en-US": {
                ".indexOn": "slug"
              }
            },
            "conferences": {
              "en-US": {
                ".indexOn": "slug"
              }
            },
            "lessons": {
              "en-US": {
                ".indexOn": "status"
              }
            },
            "team": {
              "en-US": {
                "members": {
                  ".indexOn": "email"
                }
              }
            }
          }
        }
      }
    },
    "accounts": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      },
      ".indexOn": "email"
    },
    "inquiries": {
      "$uid": {
        ".write": "true"
      }
    },
    "team-request": {
      "$uid": {
        ".write": "true"
      }
    }
  }
}
